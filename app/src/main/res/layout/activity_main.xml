<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/tvMazeSolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:text="Maze Solver"
        android:textSize="20sp"
        android:textColor="#2C3E50"
        android:textStyle="bold" />

    <!-- Logout Button aligned to the right, vertically aligned with the TextView -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/tvMazeSolver"
        android:layout_margin="16dp"
        android:text="Logout"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2C3E50" />

    <TextView
        android:id="@+id/tvCurrentLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="Level 1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp"
        android:background="#2C3E50"
        android:textColor="#FFFFFF"/>


    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Maze"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#2C3E50"
        android:textColor="#FFFFFF"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp" />


    <Button
        android:id="@+id/btnSolve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solve"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#2C3E50"
        android:textColor="#FFFFFF"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Save button above Solve -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:backgroundTint="#2C3E50"
        android:textColor="#FFFFFF"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:layout_above="@id/btnSolve"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnLevelSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Level"
        android:backgroundTint="#2C3E50"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/btnReset"
        android:layout_toStartOf="@id/btnSolve"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>
</RelativeLayout>
