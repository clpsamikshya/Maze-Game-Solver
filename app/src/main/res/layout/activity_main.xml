<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <!-- Title -->
    <TextView
        android:id="@+id/tvMazeSolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:text="Maze Solver"
        android:textSize="20sp"
        android:textColor="#2C3E50"
        android:textStyle="bold" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/tvMazeSolver"
        android:layout_margin="16dp"
        android:text="Logout"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2C3E50" />

    <!-- Level and Moves Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tvMazeSolver"
        android:layout_marginTop="60dp"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Time: 0 sec"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="start"
            android:textColor="#2C3E50"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvCurrentLevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Level: 1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:textColor="#2C3E50" />

        <TextView
            android:id="@+id/tvMoves"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Moves: 0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:gravity="end"
            android:padding="12dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi, User"
        android:layout_marginTop="50dp"
        android:textColor="#2C3E50"
        android:textSize="20sp"
        android:padding="16dp"/>

    <!-- Reset Button -->
    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Maze"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#2C3E50"
        android:textColor="#FFFFFF" />

    <!-- Solve Button -->
    <Button
        android:id="@+id/btnSolve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solve"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#2C3E50"
        android:textColor="#FFFFFF" />

    <!-- Save Button (above Solve) -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/btnSolve"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#2C3E50"
        android:textColor="#FFFFFF" />

    <!-- Level Select Button -->
    <Button
        android:id="@+id/btnLevelSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Level"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/btnReset"
        android:layout_toStartOf="@id/btnSolve"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#2C3E50"
        android:textColor="#FFFFFF"/>

    <!-- Spinner: Left of Save, Above Select Level -->
    <Spinner
        android:id="@+id/spinnerAlgorithm"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_toStartOf="@id/saveButton"
        android:layout_above="@id/btnLevelSelect"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:spinnerMode="dropdown"
        android:popupBackground="#2C3E50"
        android:backgroundTint="#2C3E50"
        android:textColor="#FFFFFF"/>

</RelativeLayout>

